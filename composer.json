{
    "name": "ikubicki/gardena-proxy",
    "version": "1.0.0",
    "description": "A simple ",
    "require": {
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0",
        "monolog/monolog": "^2.0",
        "guzzlehttp/guzzle": "^7.10"
    },
    "autoload": {
        "psr-4": {
            "GardenaProxy\\": "src/"
        }
    },
    "scripts": {
        "dev": [
            "php -S localhost:8000 -t public"
        ],
        "docker:run": [
            "docker run -d -p 8080:8080 -v $(pwd):/app -w /app --name gardena-proxy-container php:8.4-cli php -S 0.0.0.0:8080 -t public",
            "echo 'Server running at http://localhost:8080'"
        ],
        "docker:run:dist": [
            "docker run -d -p 8081:8081 -v $(pwd)/dist:/app -w /app --name gardena-proxy-dist-container php:8.4-cli php -S 0.0.0.0:8081",
            "echo 'PHAR application running at http://localhost:8081'"
        ],
        "docker:stop": [
            "docker stop gardena-proxy-container",
            "docker stop gardena-proxy-dist-container",
            "docker rm gardena-proxy-container",
            "docker rm gardena-proxy-dist-container"
        ],
        "docker:logs": [
            "docker logs -f gardena-proxy-container"
        ],
        "build": [
            "composer install --no-dev --optimize-autoloader",
            "php -d phar.readonly=0 tools/build.php",
            "composer install"
        ],
        "rebuild": [
            "php -d phar.readonly=0 tools/build.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
